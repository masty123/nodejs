extends layout

block content
    h1 #{title}
    form(method='POST', action='/athletes/add')
        #form-group
            label Athlete Name:
            input.form-control(name='name', type='text')
        #form-group
            label Trophy:
            input.form-control(name='trophy', type='text')
        #form-group
            label Description:
            textarea.form-control(name='description')
        br
        input.btn.btn-primary(type='submit',value='Submit')